{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "typeRoots": [
      "src/@types",
      "./node_modules/@types"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "lib": ["es2018", "esnext.asynciterable"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "exclude": ["node_modules"],
  "include": [
    "./src/**/*.ts"
  ]
}
